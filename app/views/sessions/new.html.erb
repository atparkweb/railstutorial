<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email] %>

      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] %>

      <%= submit_tag "Sign in", class: 'btn btn-primary btn-large' %>
    <% end %>
  </div>
</div>
